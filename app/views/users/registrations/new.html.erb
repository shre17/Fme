<div class="container" id="signcontainer">
	<h2 class="signup">Sign up here</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	
	<div class="field form-group sign">
		<%= f.label :email %>
		<%= f.email_field :email,  autofocus: true, required: true, placeholder: "e.g. someone@example.com", class: "form-control input-lg"%>
	</div>

	<div class="actions signbtn">
		<%= f.submit "Sign up", class: "btn btn-md btn-primary sign" %>
	</div>
	<% end %>

	<div class="signlink">
		<%= render "users/shared/links" %>
	</div>

</div>




