<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>


<div class="container">
<h2>Sign up</h2>

<%#= form_for(:user, as: :user, url: registration_path(:user)) do |f| %>
<%= form_for :professional_account, url: :update_account_professional_account, method: :patch, :html => { :class => "form-horizontal " } do |f| %>

<div class="field">
	<%= f.label :First_name %><br />
	<%= f.text_field :first_name, required: true, autofocus: true %>
</div>

<div class="field">
	<%= f.label :Last_name %><br />
	<%= f.text_field :last_name, required: true %>
</div>

<div class="field">
	<%= f.label :Address %><br />
	<%= f.text_field :address, required: true %>
</div>

<div class="field">
	<%= f.label :Contact %><br />
	<%= f.number_field :contact, required: true %>
</div>

<div class="field">
	<%= f.label :Languages %><br />
	<%Language.all.each do |lang|%>
	<label>
		<%= f.check_box(:language, {multiple: true}, lang.id, nil) %>                 
		<%= lang.lang_name %> 
	</label>
	<br>
	<%end%>
</div>

<div class="field">
	<%= f.label :Locations %><br />
    <%Location.all.each do |loc|%>
	<label>
		<%= f.check_box(:location, {multiple: true}, loc.id, nil) %>                 
		<%= loc.loc_name %> 
	</label>
	<br>
	<%end%>
</div>

<div class="field">
	<div class="form-group" style="margin-left: 1px;">
	<%= f.label :Service_Category, required: true %>
	<div>
		<%= f.select(:service_category_id, ServiceCategory.all.collect {|oj| [oj.name, oj.id]}, :prompt =>       'Select Sevice Category') %>
	</div>
</div>

<div class="field" style="margin-top: 10px;">
	<%= f.label :Experience %><br />
	<%= f.text_field :experience, placeholder: "0-5 yrs", required: true %>
</div>

<div class="field">
	<%= f.label :profile_picture %><br />
	<%= f.file_field :profile_pic %>
</div>

<div class="field">
	<%= f.label :about_me %><br />
	<%= f.text_area :about_me, required: true %>
</div>

<div class="field">
	<%= f.label :email %><br />
	<%= f.email_field :email, value: @user.email %>
</div>

<div class="field">
	<%= f.label :password %>
	<% if @minimum_password_length %>
	<em>(<%= @minimum_password_length %> characters minimum)</em>
	<% end %><br />
	<%= f.password_field :password, autocomplete: "off" %>
</div>

<div class="field">
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>

<%= f.hidden_field :role, :value => "professional" %>

<div class="actions" style="margin-top: 10px;">
	<%= f.submit "Sign up" %>
</div>

<% end %>
</div>